<div class="container">
    <div class="row panel panel-default">
        <div class="col-xs-12">
            <form id="group-form">
                <input type="hidden" name="group" id="group" value="{{this.group}}">
                <select name="mission" id="mission" class="form-control">
                <option disabled>Mission Cards</option> 
                {{#missionCards}}
                <option value="mission{{id}}">{{name}} {{type}}</option>
                {{/missionCards}}
                </select>
                <br>
                <select name="allies" id="allies" class="form-control">
                <option disabled>Deployment Cards</option>
                {{#deploymentCards}}
                {{#if empire}}                
                {{else}}
                <option value="deployment{{id}}">{{name}}</option>
                {{/if}}
                {{/deploymentCards}}
                </select>
                
                
                <input type="text" name="credits" id="credits" placeholder="credits">
                <input type="submit" id="submitButton" value="Add New User">
            </form>
        </div>
    </div>
    
        
    <div class="row">
        <div class="col-xs-6">

        </div>
    </div>
</div>